<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:theme="@style/Theme.Design.Light.BottomSheetDialog"
    android:background="@color/backgroundOfApp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:layout_constraintHeight_min="56dp"
    tools:context="edu.uark.uarkregisterapp.ProductsListingActivity">

    <android.support.design.card.MaterialCardView
        android:id="@+id/material_card_total"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="16dp"
        app:contentPaddingBottom="12dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingTop="12dp">

        <RelativeLayout
            android:id="@+id/activity_landing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <!--tools:showIn="@layout/content_cart">-->


            <TextView
                android:id="@+id/bottom_sheet_total"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="80dp"
                android:text="@string/total"
                android:textAlignment="textEnd"
                android:textAppearance="@style/Theme.Design.Light.BottomSheetDialog"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/bottom_sheet_product_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textAppearance="@style/Theme.Design.Light.BottomSheetDialog"
                android:textSize="24sp" />

        </RelativeLayout>

    </android.support.design.card.MaterialCardView>

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="104dp"
        android:text="@string/subtotal"
        android:textAppearance="@style/TextAppearance.Design.Counter"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/subtotal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="16dp"
        android:text="@string/_0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/taxes_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="16dp"
        android:text="@string/_0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/taxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="104dp"
        android:text="@string/taxes"
        android:textAppearance="@style/TextAppearance.Design.Counter"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="139dp"
        android:background="@color/colorAccent" />

</RelativeLayout>