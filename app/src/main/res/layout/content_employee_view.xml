<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_product_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uark.uarkregisterapp.EmployeeViewActivity"
    tools:showIn="@layout/activity_employee_view">


    <TextView
        android:id="@+id/text_view_employee_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_view_label_employees_first_name" />

    <EditText
        android:id="@+id/edit_text_employee_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_employee_first_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:hint="@string/text_view_employees_first_name"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_view_employee_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_employee_first_name"
        android:layout_marginTop="10dp"
        android:text="@string/text_view_label_employees_last_name" />

    <EditText
        android:id="@+id/edit_text_employee_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_employee_last_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:hint="@string/text_view_employees_last_name"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_view_employee_employee_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_employee_last_name"
        android:layout_marginTop="10dp"
        android:text="@string/text_view_label_employees_employee_ID" />

    <EditText
        android:id="@+id/edit_text_employee_employee_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_employee_employee_ID"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:hint="@string/text_view_employees_employee_ID"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_view_employee_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_employee_employee_ID"
        android:layout_marginTop="10dp"
        android:text="@string/text_view_label_employees_role" />

    <EditText
        android:id="@+id/edit_text_employee_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_employee_role"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:hint="@string/text_view_employees_role"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_view_employee_created_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_employee_role"
        android:layout_marginTop="10dp"
        android:text="@string/text_view_label_employees_created_on" />

    <EditText
        android:id="@+id/edit_text_employee_created_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_employee_created_on"
        android:layout_marginTop="5dp"
        android:enabled="false"
        android:hint="@string/text_view_employees_created_on"
        android:inputType="date" />

    <ImageButton
        android:id="@+id/button_activity_edit_delete"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/button_delete"
        android:onClick="deleteButtonOnClick"
        android:src="@mipmap/ic_delete_forever_black_24dp" />

    <ImageButton
        android:id="@+id/button_activity_edit_save"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/button_save"
        android:onClick="saveButtonOnClick"
        android:src="@mipmap/ic_save_black_24dp" />

</RelativeLayout>
