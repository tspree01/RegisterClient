<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:contentPaddingBottom="12dp"
    app:contentPaddingTop="12dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingLeft="16dp"
    app:contentPadding="16dp">

    <RelativeLayout
        android:id="@+id/activity_landing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--tools:showIn="@layout/content_cart">-->
        <android.support.design.button.MaterialButton
            android:id="@+id/material_icon_button_remove"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/material_icon_button_add"
            android:paddingLeft="0dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.Design.Counter"
            app:icon="@drawable/baseline_remove_black_24" />


        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/_0"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/_0"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        <android.support.design.button.MaterialButton
            android:id="@+id/material_icon_button_add"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="158dp"

            android:layout_marginTop="0dp"
            android:paddingLeft="0dp"
            android:textAppearance="@style/TextAppearance.Design.Counter"
            app:icon="@drawable/baseline_add_black_24" />

    </RelativeLayout>

</android.support.design.card.MaterialCardView>
