<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/shopping_cart_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundOfApp"
    tools:context="edu.uark.uarkregisterapp.CartActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/car_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cart_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/actionbarColor"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            android:visibility="visible"
            app:navigationIcon="@drawable/baseline_close_white_24" />

    </com.google.android.material.appbar.AppBarLayout>


    <include
        layout="@layout/content_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/product_total_bottom_sheet"
        app:layout_anchorGravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
