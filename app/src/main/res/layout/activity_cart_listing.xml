<?xml version="1.0" encoding="utf-8"?>
<android.support.design.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout
    android:id="@+id/shopping_cart_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundOfApp"
    android:fitsSystemWindows="true"
    tools:context="edu.uark.uarkregisterapp.CartActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/car_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/cart_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/actionbarColor"
            android:elevation="5dp"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            android:onClick="expandBottomSheet"
            android:visibility="visible"
            app:navigationIcon="@drawable/baseline_close_white_24" />

    </android.support.design.widget.AppBarLayout>


    <include
        layout="@layout/content_cart"
        android:layout_width="match_parent"
        android:layout_height="660dp" />

    <include layout="@layout/product_total_bottom_sheet" />

</android.support.design.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout>
